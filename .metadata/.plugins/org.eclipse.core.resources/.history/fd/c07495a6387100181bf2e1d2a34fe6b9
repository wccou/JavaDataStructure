 */
public class Test44 {

	public Test44() {
		// TODO Auto-generated constructor stub
	}
	public int digitalAtIndex(int index) {
		if(index<0)
			return -1;
		int s=1;
		int j=0;
		for(int i=0;;i++){
		    if(index>s){
		    	s=s+9*10^i*(i+1);
		    	
		    }else{
		    	j=i+1;
		    	break;
		    }
		}
		System.out.println(s);
		System.out.println(j);
		int sum=s-9*10^(j-1)*(j);
		System.out.println(sum);
		int indexOfJBit=sum/j;
		System.out.println(indexOfJBit);
		int number=10^(j-1)+indexOfJBit;
		return number;
	}
	public static void main(String[] args) {
		Test44 test=new Test44();
		int index= test.digitalAtIndex(55);
		System.out.println(index);
	}

}
